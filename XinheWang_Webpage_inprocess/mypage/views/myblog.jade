       a(class="navbar-brand",href="/theheapspace/myblog") People's Blog
      div(id="navbar",class="navbar-collapse collapse")
       ul(class="nav navbar-nav")
        li(class="active") 
         a(href="/theheapspace") Home 
        li 
         a(href="#project") Project
        li 
         a(href="/theheapspace/myblog") Blog
        li(class="dropdown") 
         a(href="#",class="dropdown-toggle" data-toggle="dropdown" role="button",aria-expanded="false") About
