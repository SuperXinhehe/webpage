doctype html
html(lang="en")
 head 
  title The Heap Space

  script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js").
  script(src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js").
  script(src="/javascripts/formvalidate.js").
  script(src="/javascripts/notes.js").
  script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.7/angular.min.js").
  script(src="/bootstrap-tagsinput/bootstrap-tagsinput-angular.min.js").
  script(src="/bootstrap-tagsinput/bootstrap-tagsinput-angular.js").
  script(src="/bootstrap-tagsinput/bootstrap-tagsinput.min.js").
  script(src="/bootstrap-tagsinput/bootstrap-tagsinput.js").
  script(src="/typeahead.js-master/dist/typeahead.bundle.js").
  link(rel="stylesheet",href="/stylesheets/notedisplay.css").
  link(rel="stylesheet",href="/stylesheets/bootstrap.min.css").
  link(rel="icon",href="/icon/favicon.ico").
  link(rel="stylesheet",href="/stylesheets/ad_blog.css").
  link(rel="stylesheet",href="/stylesheets/formvalidate.css").
  link(rel="stylesheet",href="/bootstrap-tagsinput/bootstrap-tagsinput.css").
  link(rel="stylesheet",href="/stylesheets/tags.css").


 body
  div(class="navbar-wrapper")
   div(class="container")
    nav(class="navbar navbar-inverse navbar-static-top")
     div(class="container")
      div(class="navbar-header")
       button(class="navbar-toggle collapsed",data-toggle="collapse",data-target="#navbar",aria-expanded="false",aria-controls="navbar")
        span(class="sr-only") Toggle navigation
        span(class="icon-bar")
        span(class="icon-bar")
        span(class="icon-bar")
       a(class="navbar-brand",href="/theheapspace/myblog") People's Blog
      div(id="navbar",class="navbar-collapse collapse")
       ul(class="nav navbar-nav")
        li(class="active") 
         a(href="/theheapspace") Home 
        li 
         a(href="#project") Project
        li 
         a(href="/theheapspace/blog/page=1") Blog
        li(class="dropdown") 
         a(href="#",class="dropdown-toggle" data-toggle="dropdown" role="button",aria-expanded="false") About
          span(class="caret")
         ul(class="dropdown-menu",role="menu")
          li
           a(href="/theheapspace/aboutme") about Xinhe (Tina)
           a(href="#") Resume
          li(class="divider")
          li(class="dropdown-header") Friends
          li
           a(href="/theheapspace/jintan") Jintan Bai (Mark)
          li(class="divider")
          li(class="dropdown-header") Other Links
          li
           a(href="#leagueoflegend") TimeLine

       ul(class="nav navbar-nav navbar-right")
        li(class="active")
         a(href="#",id="usr_name") Welcome, #{usr}
        li 
         a(href="#") Logout

  div(class="container",style="padding-top:50px")
   div(class="col-md-8")
    h3 New Note
    hr.style-one
    form(method="post",id="newform",action="/theheapspace/notes/addingnew")
     div(class="form-group")
      label(for="validate-text") Note Title 
      div(class="input-group",data-validate="length",data-length="5")
       input(type="text",class="form-control",name="note_name",id="notetitle",required)
       span(class="input-group-addon danger") 
        span(class="glyphicon glyphicon-remove")
      div(class="form-group")
       label(for="validate-text") Source
       div(class="input-group",data-validate="length",data-length="2")
        input(type="text",class="form-control",name="source",required)
        span(class="input-group-addon danger")
         span(class="glyphicon glyphicon-remove")
      div(class="form-group")
       label Tags
       div(class="form-group")
        input(type="text",class="tagsinput",data-role="tagsinput")
      div(class="form-group")
       label(for="validate-optional") Description
       div(class="input-group")
        textarea(type="text",rows="6",class="form-control",name="rawdescription",id="rawdescrip")
        span(class="input-group-addon info")
         span(class="glyphicon glyphicon-asterisk")     
      div(class="form-group")
       label(for="validate-optional") Content
       div(class="input-group")
        textarea(type="text",rows="3",class="form-control",name="content")
        span(class="input-group-addon info")
         span(class="glyphicon glyphicon-asterisk")  
      div(class="form-group")
       button(value="Submit",class="btn btn-success",style="float:right",type="submit",onclick="addit()") Submit 
        span(class="glyphicon glyphicon-send")