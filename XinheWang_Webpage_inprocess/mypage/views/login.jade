link(rel="stylesheet",href="/stylesheets/login.css").
script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js").
script(src="/jquery-validation/dist/jquery.validate.min.js").
script(src="/bootstrap/js/bootstrap.min.js").
script(language="JavaScript",type="text/javascript",src="/javascripts/login.js").

body(style="background-image:url('/images/back4.jpg');")
div(class="container")
 div(class="row")
  div(class="main")
   h3 Please Log In
   form(role="form",id="loginForm",method="post",action="/theheapspace/login/check")
     div(class="form-group")
      label(for="inputUsernameEmail") Username or Email 
      input(type="text", class="form-control" id="inputUsernameEmail",name="user[username]",placehoder="Username")
     div(class="form-group")
      a(class="pull-right", href="#") Forgot password?
      label(for="inputPassword") Password
      input(type="password",class="form-control",id="inputPassword",name="user[password]",placehoder="Password")
     p(style="color:red") #{error}
     div(class="checkbox pull-right")
      label 
       input(type="checkbox")
       p Remember me
     button(type="submit",class="btn btn btn-primary") Log In

   div(class="login-or")
     hr(class="hr-or") 
     span(class="span-or") or
   div(class="row")
    p Log in with
    div(class="col-xs-6 col-sm-6 col-md-6")
     a(href="#", class="btn btn-lg btn-primary btn-block") Facebook
    div(class="col-xs-6 col-sm-6 col-md-6")
     a(href="#", class="btn btn-lg btn-info btn-block") Twitter


     
